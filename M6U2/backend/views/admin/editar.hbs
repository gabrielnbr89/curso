<div class="container" style="margin: 15px auto">
    <div class="row">
        <div class="col-8 offset-2">
            <h4>Editando novedad</h4>
            <form method="post" action="/admin/novedades/editar">
                <input type="hidden" value="{{novedad.id}}" name="id">
                <div class="mb-1">
                    <label class="form-label" for="titulo">Título</label>
                    <input type="text" name="titulo" placeholder="Título" value="{{novedad.titulo}}" class="form-control">
                </div>
                <div class="mb-1">
                    <label class="form-label" for="subtitulo">Subtítulo</label>
                    <textarea name="subtitulo" placeholder="Subtítulo" class="form-control form-control-sm">{{novedad.subtitulo}}</textarea>
                </div>
                <div class="mb-2">
                    <label class="form-label" for="cuerpo">Cuerpo</label>
                    <textarea name="cuerpo" placeholder="Cuerpo" class="form-control form-control-sm" style="height: 180px;">{{novedad.cuerpo}}</textarea>
                </div>
                <button type="submit" class="btn btn-primary">Guardar</button>
                <a class="btn btn-danger" href="/admin/novedades">Volver</a>
            </form>
        </div>
    </div>
</div>